        <dt>
            Emal
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Администратор
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Администратор)
        </dd>

        <dt>
            Квалификация
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Квалификации.Квалификация)
        </dd>

        <dt>
            Пол
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Пол.Пол1)
        </dd>

        <dt>
            Участок
