        {
            <h5>Сформировать историю вакцинации:</h5>
            <input type="submit" value="Добавить" class="btn btn-primary" />
        }
    </p>
    <dl class="dl-horizontal">
        <dt>
            ФИО
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ФИО_сотрудника)
        </dd>

        <dt>
            Дата рождения
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Дата_рождения)
